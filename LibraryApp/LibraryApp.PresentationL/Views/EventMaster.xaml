<UserControl x:Class="LibraryApp.PresentationL.Views.EventMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.PresentationL.Views"
             xmlns:vmodel="clr-namespace:LibraryApp.PresentationL.ViewModel"
             xmlns:view="clr-namespace:LibraryApp.PresentationL.Views"
             mc:Ignorable="d" 
             Height="500" Width="800">
    
    <UserControl.DataContext>
        <vmodel:VMEventList/>
    </UserControl.DataContext>
    
    <DockPanel Margin="20">
        <TextBlock FontSize="24" DockPanel.Dock="Top" Margin="0,0,0,10">Events</TextBlock>
        
        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <GroupBox Header="Selected Entry" Margin="0,0,10,0">
                <view:EventEntry DataContext="{Binding SelectedVMEvent}" />
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Event List" Margin="0,10,0,0">
                <ListView ItemsSource="{Binding EventVMList}" SelectedItem="{Binding SelectedVMEvent, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="100" DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Timestamp" Width="150" DisplayMemberBinding="{Binding Timestamp}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock VerticalAlignment="Center" Margin="5">New Id:</TextBlock>
                <TextBox Width="80" Text="{Binding NewEventId, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock VerticalAlignment="Center" Margin="5">New Name:</TextBlock>
                <TextBox Width="80" Text="{Binding NewEventDescription, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>


                <Button Content="Add" Command="{Binding AddCommand}" Margin="5"/>
                <Button Content="Remove" Command="{Binding RemoveCommand}" Margin="5"/>
                <Button Content="Update" Command="{Binding UpdateCommand}" Margin="5"/>

            </StackPanel>

        </Grid>
    </DockPanel>
</UserControl>
