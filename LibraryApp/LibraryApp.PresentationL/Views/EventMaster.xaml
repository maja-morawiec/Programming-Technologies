<UserControl x:Class="LibraryApp.PresentationL.Views.EventMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.PresentationL.Views"
             xmlns:vmodel="clr-namespace:LibraryApp.PresentationL.ViewModel"
             xmlns:view="clr-namespace:LibraryApp.PresentationL.Views"
             mc:Ignorable="d" 
             Height="500" Width="800">
    <!--<UserControl.DataContext>
        <vmodel:VMEventList/>
    </UserControl.DataContext>-->
    <DockPanel Margin="20">
        <TextBlock FontSize="24" DockPanel.Dock="Top" Margin="0,0,0,10">Events</TextBlock>
        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <GroupBox Header="Selected Entry">
                <view:EventEntry FontSize="12" DataContext="{Binding SelectedVMEvent}" Margin="0,0,9,0" />
            </GroupBox>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="0">
                <Button Command="{Binding AddCommand}" Margin="0,5">Add</Button>
                <Button Command="{Binding RemoveCommand}" Margin="0,5">Remove</Button>
                <Button Command="{Binding UpdateCommand}" Margin="0,5">Update</Button>

            </StackPanel>

            <GroupBox Grid.Row="1" Header="Event List" Margin="0,10,0,0">
                <ListView ItemsSource="{Binding EventVMList}" SelectedIndex="{Binding SelectedVMEvent}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="100" DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Timestamp" Width="150" DisplayMemberBinding="{Binding Timestamp}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </DockPanel>
</UserControl>
