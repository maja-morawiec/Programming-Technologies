<UserControl x:Class="LibraryApp.PresentationL.Views.ProductMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.PresentationL.Views"
             xmlns:vmodel="clr-namespace:LibraryApp.PresentationL.ViewModel"
             xmlns:view="clr-namespace:LibraryApp.PresentationL.Views"
             mc:Ignorable="d" 
             Height="500" Width="800">
    
    <UserControl.DataContext>
        <vmodel:VMProductList/>
    </UserControl.DataContext>
    
    <DockPanel Margin="20, 0, 20, 20">
        <TextBlock FontSize="24" DockPanel.Dock="Top" Margin="0,0,0,0">Products</TextBlock>
        
        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <GroupBox Header="Selected Product" Margin="0,0,10,0">
                <view:ProductEntry FontSize="12" DataContext="{Binding SelectedProduct}" Margin="0,0,9,0" />
            </GroupBox>
            
            <Button Margin="40,25,640,152" Command="{Binding AddProductCommand}" Height="NaN" Width="NaN">Add New</Button>
            <Button Margin="40,101,640,76" Command="{Binding RemoveProductCommand}" Height="NaN" Width="NaN">Delete</Button>
            <Button Margin="660,176,20,10" Command="{Binding RefreshCommand}" Height="NaN" Width="NaN">Refresh</Button>
            <Button Margin="40,63,640,114" Command="{Binding UpdateProductCommand}" Height="NaN" Width="NaN">Update</Button>
            
            <GroupBox Grid.Row="1" Header="Product List" Margin="0,10,0,0">
                <ListView Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,5" ItemsSource="{Binding Products}" SelectedIndex="{Binding SelectedProduct, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="100" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Name" Width="400" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Quantity" Width="300" DisplayMemberBinding="{Binding Quantity}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <TextBlock VerticalAlignment="Center" Margin="5">New Id:</TextBlock>
                <TextBox Width="80" Text="{Binding NewProductId, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock VerticalAlignment="Center" Margin="5">New Name:</TextBlock>
                <TextBox Width="80" Text="{Binding NewProductName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock VerticalAlignment="Center" Margin="5">New Quantity:</TextBlock>
                <TextBox Width="80" Text="{Binding NewProductQuantity, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Button Content="Add" Command="{Binding AddProductCommand}" Margin="5"/>
                <Button Content="Update" Command="{Binding RemoveProductCommand}" Margin="5"/>
                <Button Content="Remove" Command="{Binding RefreshCommand}" Margin="5"/>
                <Button Content="Refresh" Command="{Binding UpdateProductCommand}" Margin="5"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>