<UserControl x:Class="LibraryApp.PresentationL.Views.EventEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.PresentationL.Views"
             xmlns:vmodel="clr-namespace:LibraryApp.PresentationL.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vmodel:VMEvent/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="42*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0" Height="26" Width="80">Id:</Label>
        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0" Height="26" Width="80">Description:</Label>
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0" Height="26" Width="80">Timestamp:</Label>
 
        <TextBox Grid.Column="1" Margin="5,0" VerticalAlignment="Center" Text="{Binding Id}" Height="18"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="5,0" VerticalAlignment="Center" Text="{Binding Description}" Height="18"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="5,0" VerticalAlignment="Center" Text="{Binding Timestamp}" Height="18"/>
    </Grid>
</UserControl>
