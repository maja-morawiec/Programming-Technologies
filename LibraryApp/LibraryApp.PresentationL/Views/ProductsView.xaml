<UserControl x:Class="LibraryApp.PresentationL.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LibraryApp.PresentationL.ViewModels">
    <UserControl.DataContext>
        <vm:ProductsViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Products}"
                 SelectedItem="{Binding SelectedProduct}"
                 DisplayMemberPath="Title" />

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Product Details" FontWeight="Bold" Margin="0 0 0 10" />

            <TextBlock Text="Title" />
            <TextBox Text="{Binding SelectedProduct.Title, Mode=TwoWay}" Margin="0 0 0 10" />

            <TextBlock Text="Author" />
            <TextBox Text="{Binding SelectedProduct.Author, Mode=TwoWay}" Margin="0 0 0 10" />

            <TextBlock Text="Year" />
            <TextBox Text="{Binding SelectedProduct.Year, Mode=TwoWay}" Margin="0 0 0 10" />

            <Button Content="Save" Command="{Binding SaveProductCommand}" Margin="0 10 0 0" />
        </StackPanel>
    </Grid>
</UserControl>
