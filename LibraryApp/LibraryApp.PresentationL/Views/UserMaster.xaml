<UserControl x:Class="LibraryApp.PresentationL.Views.UserMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.PresentationL.Views"
             xmlns:vmodel="clr-namespace:LibraryApp.PresentationL.ViewModel"
             mc:Ignorable="d" 
             Height="500" Width="800">

    <UserControl.DataContext>
        <vmodel:VMUserList />
    </UserControl.DataContext>

    <DockPanel Margin="20">
        <TextBlock FontSize="24" DockPanel.Dock="Top" Margin="0,0,0,10">Users</TextBlock>

        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <GroupBox Header="Selected User" Margin="0,0,10,0">
                <local:UserEntry DataContext="{Binding SelectedVMUser}" />
            </GroupBox>

            <GroupBox Grid.Row="1" Header="User List" Margin="0,10,0,0">
                <ListView ItemsSource="{Binding UserVMList}" SelectedItem="{Binding SelectedVMUser, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="100" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="100" Grid.RowSpan="2">
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,5" />
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
