<UserControl x:Class="LibraryApp.PresentationL.Views.UserMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryApp.PresentationL.Views"
             xmlns:vmodel="clr-namespace:LibraryApp.PresentationL.ViewModel"
             mc:Ignorable="d" 
             Height="500" Width="800">

    <UserControl.DataContext>
        <vmodel:VMUserList />
    </UserControl.DataContext>

    <DockPanel Margin="20">
        <TextBlock FontSize="24" DockPanel.Dock="Top" Margin="0,0,0,10">Users</TextBlock>

        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox Header="Selected User" Margin="0,0,10,0">
                <local:UserEntry DataContext="{Binding SelectedUser}" />
            </GroupBox>

            <GroupBox Grid.Row="1" Header="User List" Margin="0,10,0,0">
                <ListView ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="100" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <TextBlock VerticalAlignment="Center" Margin="5">New Id:</TextBlock>
                <TextBox Width="80" Text="{Binding NewUserId, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock VerticalAlignment="Center" Margin="5">New Name:</TextBlock>
                <TextBox Width="150" Text="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Button Content="Add" Command="{Binding AddUserCommand}" Margin="5"/>
                <Button Content="Update" Command="{Binding UpdateUserCommand}" Margin="5"/>
                <Button Content="Remove" Command="{Binding RemoveUserCommand}" Margin="5"/>
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="5"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
